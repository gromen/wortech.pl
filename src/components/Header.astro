---
import MobileMenu from "./MobileMenu.astro";
import ThemeToggle from "./ThemeToggle.astro";

const currentPath = Astro.url.pathname;

const links = [
  { href: "/", label: "Strona główna" },
  { href: "/projekty", label: "Projekty" },
  { href: "/kontakt", label: "Kontakt" },
];
---

<header
  class="fixed top-0 left-0 right-0 z-50 bg-dark-bg/90 backdrop-blur-md border-b border-white/5 light:bg-white/80 light:border-black/5 md:h-24"
>
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
    <div class="flex items-center justify-between h-24">
      <!-- Logo -->
      <a href="/" class="flex items-center gap-2">
        <img src="/logo_wortech.webp" alt="WORTECH" class="h-14 light:hidden" />
        <img
          src="/logo_wortech.webp"
          alt="WORTECH"
          class="h-14 hidden light:block"
        />
      </a>

      <!-- Desktop nav -->
      <nav class="hidden md:flex items-center gap-8">
        {
          links.map((link) => (
            <a
              href={link.href}
              class:list={[
                "text-sm font-medium transition-colors",
                currentPath === link.href ?
                  "text-orange"
                : "text-dark-text hover:text-orange light:text-charcoal light:hover:text-orange",
              ]}
            >
              {link.label}
            </a>
          ))
        }
      </nav>

      <!-- Actions -->
      <div class="flex items-center gap-2">
        <ThemeToggle />
        <MobileMenu />
      </div>
    </div>
  </div>
</header>

<!-- Spacer for fixed header -->
<div class="h-16"></div>
