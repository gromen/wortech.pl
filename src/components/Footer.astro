---
import { siteConfig } from "../config";

const year = new Date().getFullYear();
---

<footer class="section-border mt-auto">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-12">
    <div class="grid grid-cols-1 md:grid-cols-3 gap-8">
      <!-- Logo & opis -->
      <div>
        <img
          src="/logo_wortech.webp"
          alt="WORTECH"
          class="h-24 mb-4 light:hidden"
        />
        <img
          src="/logo_wortech.webp"
          alt="WORTECH"
          class="h-24 mb-4 hidden light:block"
        />
        <p class="text-dark-muted text-sm light:text-gray-600">
          Podwykonawstwo robót drogowych.<br />
          Działamy na terenie całej Polski od 2019 roku.
        </p>
      </div>

      <!-- Nawigacja -->
      <div>
        <h3
          class="text-sm font-semibold uppercase tracking-wider mb-4 text-dark-muted light:text-gray-500"
        >
          Nawigacja
        </h3>
        <nav class="flex flex-col gap-2">
          <a href="/" class="text-sm hover:text-orange transition-colors"
            >Strona główna</a
          >
          <a
            href="/projekty"
            class="text-sm hover:text-orange transition-colors">Projekty</a
          >
          <a href="/kontakt" class="text-sm hover:text-orange transition-colors"
            >Kontakt</a
          >
        </nav>
      </div>

      <!-- Dane kontaktowe -->
      <div>
        <h3
          class="text-sm font-semibold uppercase tracking-wider mb-4 text-dark-muted light:text-gray-500"
        >
          Kontakt
        </h3>
        <div class="flex flex-col gap-2 text-sm">
          <span>{siteConfig.company.name}</span>
          <span>{siteConfig.company.street}</span>
          <span>{siteConfig.company.city}</span>
          <span>NIP: {siteConfig.company.nip}</span>
          <a
            href={`tel:${siteConfig.company.phone.replace(/\s/g, "")}`}
            class="hover:text-orange transition-colors"
            >{siteConfig.company.phone}</a
          >
          <a
            href={`mailto:${siteConfig.company.email}`}
            class="hover:text-orange transition-colors"
            >{siteConfig.company.email}</a
          >
        </div>
      </div>
    </div>

    <div
      class="section-border mt-8 pt-8 text-center text-sm text-dark-muted light:text-gray-500"
    >
      <p>
        &copy; {year}
        {siteConfig.company.name}. Wszelkie prawa zastrzeżone.
      </p>
      <p class="mt-2 text-xs opacity-70">
        Realizacja: <a
          id="author-link"
          href={siteConfig.author.linkedin}
          target="_blank"
          rel="noopener noreferrer"
          class="hover:text-orange transition-colors inline-flex items-center gap-1"
          >{siteConfig.author.name}
          <svg class="w-3 h-3" fill="currentColor" viewBox="0 0 24 24"
            ><path
              d="M20.447 20.452h-3.554v-5.569c0-1.328-.027-3.037-1.852-3.037-1.853 0-2.136 1.445-2.136 2.939v5.667H9.351V9h3.414v1.561h.046c.477-.9 1.637-1.85 3.37-1.85 3.601 0 4.267 2.37 4.267 5.455v6.286zM5.337 7.433a2.062 2.062 0 01-2.063-2.065 2.064 2.064 0 112.063 2.065zm1.782 13.019H3.555V9h3.564v11.452zM22.225 0H1.771C.792 0 0 .774 0 1.729v20.542C0 23.227.792 24 1.771 24h20.451C23.2 24 24 23.227 24 22.271V1.729C24 .774 23.2 0 22.222 0h.003z"
            ></path></svg
          ></a
        >
      </p>
    </div>
  </div>
</footer>

<script is:inline>
  (function () {
    var authorLink = document.getElementById('author-link');
    if (!authorLink || authorLink.dataset.init) return;
    authorLink.dataset.init = 'true';

    authorLink.addEventListener('click', function () {
      if (window.gtag) {
        window.gtag('event', 'click', {
          link_url: authorLink.href,
          link_text: 'author_linkedin',
          outbound: true,
        });
      }
    });
  })();
</script>
