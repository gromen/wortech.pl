---
import Layout from '../layouts/Layout.astro';
import ContactForm from '../components/ContactForm.astro';
---

<Layout title="Kontakt - WORTECH" description="Skontaktuj się z WORTECH. Formularz kontaktowy, telefon, email.">
  <section class="py-20 sm:py-24">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="text-center mb-12">
        <div class="flex items-center justify-center gap-3 mb-4">
          <div class="h-px w-12 bg-orange"></div>
          <span class="text-orange text-sm font-medium uppercase tracking-wider">Kontakt</span>
          <div class="h-px w-12 bg-orange"></div>
        </div>

        <h1 class="heading-display text-3xl sm:text-4xl lg:text-5xl mb-4">
          Skontaktuj się <span class="text-gradient">z nami.</span>
        </h1>

        <p class="text-dark-muted light:text-gray-600 max-w-2xl mx-auto">
          Chętnie odpowiemy na pytania i przygotujemy ofertę współpracy.
        </p>
      </div>

      <div class="grid grid-cols-1 lg:grid-cols-3 gap-12">
        <!-- Formularz -->
        <div class="lg:col-span-2">
          <div class="card rounded-xl p-6 sm:p-8">
            <ContactForm />
          </div>
        </div>

        <!-- Dane kontaktowe -->
        <div class="space-y-6">
          <div class="card rounded-lg p-6">
            <svg class="w-6 h-6 text-orange mb-3" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="1.5">
              <path stroke-linecap="round" stroke-linejoin="round" d="M2.25 6.75c0 8.284 6.716 15 15 15h2.25a2.25 2.25 0 002.25-2.25v-1.372c0-.516-.351-.966-.852-1.091l-4.423-1.106c-.44-.11-.902.055-1.173.417l-.97 1.293c-.282.376-.769.542-1.21.38a12.035 12.035 0 01-7.143-7.143c-.162-.441.004-.928.38-1.21l1.293-.97c.363-.271.527-.734.417-1.173L6.963 3.102a1.125 1.125 0 00-1.091-.852H4.5A2.25 2.25 0 002.25 4.5v2.25z" />
            </svg>
            <h3 class="font-semibold mb-1">Telefon</h3>
            <a href="tel:+48503390957" class="text-dark-muted light:text-gray-600 hover:text-orange transition-colors">+48 503 390 957</a>
          </div>

          <div class="card rounded-lg p-6">
            <svg class="w-6 h-6 text-orange mb-3" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="1.5">
              <path stroke-linecap="round" stroke-linejoin="round" d="M21.75 6.75v10.5a2.25 2.25 0 01-2.25 2.25h-15a2.25 2.25 0 01-2.25-2.25V6.75m19.5 0A2.25 2.25 0 0019.5 4.5h-15a2.25 2.25 0 00-2.25 2.25m19.5 0v.243a2.25 2.25 0 01-1.07 1.916l-7.5 4.615a2.25 2.25 0 01-2.36 0L3.32 8.91a2.25 2.25 0 01-1.07-1.916V6.75" />
            </svg>
            <h3 class="font-semibold mb-1">Email</h3>
            <a href="mailto:biuro@wortech.pl" class="text-dark-muted light:text-gray-600 hover:text-orange transition-colors">biuro@wortech.pl</a>
          </div>

          <div class="card rounded-lg p-6">
            <svg class="w-6 h-6 text-orange mb-3" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="1.5">
              <path stroke-linecap="round" stroke-linejoin="round" d="M15 10.5a3 3 0 11-6 0 3 3 0 016 0z" />
              <path stroke-linecap="round" stroke-linejoin="round" d="M19.5 10.5c0 7.142-7.5 11.25-7.5 11.25S4.5 17.642 4.5 10.5a7.5 7.5 0 1115 0z" />
            </svg>
            <h3 class="font-semibold mb-1">Adres</h3>
            <p class="text-dark-muted light:text-gray-600">
              WORTECH Marcin Gromek<br />
              ul. Topolowa 22<br />
              05-092 Łomianki
            </p>
          </div>

          <div class="card rounded-lg p-6">
            <svg class="w-6 h-6 text-orange mb-3" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="1.5">
              <path stroke-linecap="round" stroke-linejoin="round" d="M15 9h3.75M15 12h3.75M15 15h3.75M4.5 19.5h15a2.25 2.25 0 002.25-2.25V6.75A2.25 2.25 0 0019.5 4.5h-15a2.25 2.25 0 00-2.25 2.25v10.5A2.25 2.25 0 004.5 19.5zm6-10.125a1.875 1.875 0 11-3.75 0 1.875 1.875 0 013.75 0zm1.294 6.336a6.721 6.721 0 01-3.17.789 6.721 6.721 0 01-3.168-.789 3.376 3.376 0 016.338 0z" />
            </svg>
            <h3 class="font-semibold mb-1">NIP</h3>
            <p class="text-dark-muted light:text-gray-600">1182211282</p>
          </div>
        </div>
      </div>
    </div>
  </section>
</Layout>
