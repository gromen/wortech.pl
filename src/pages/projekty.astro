---
import Layout from '../layouts/Layout.astro';
import ProjectCard from '../components/ProjectCard.astro';
import { projects } from '../data/projects';
---

<Layout title="Projekty - WORTECH" description="Zrealizowane projekty drogowe firmy WORTECH. Drogi ekspresowe, krajowe i gminne.">
  <section class="py-20 sm:py-24">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="text-center mb-12">
        <div class="flex items-center justify-center gap-3 mb-4">
          <div class="h-px w-12 bg-orange"></div>
          <span class="text-orange text-sm font-medium uppercase tracking-wider">Projekty</span>
          <div class="h-px w-12 bg-orange"></div>
        </div>

        <h1 class="heading-display text-3xl sm:text-4xl lg:text-5xl mb-4">
          Nasze <span class="text-gradient">realizacje.</span>
        </h1>

        <p class="text-dark-muted light:text-gray-600 max-w-2xl mx-auto">
          Wybrane projekty drogowe zrealizowane przez WORTECH jako podwykonawca.
        </p>
      </div>

      <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
        {projects.map((project) => (
          <ProjectCard
            title={project.title}
            description={project.description}
            date={project.date}
            type={project.type}
          />
        ))}
      </div>
    </div>
  </section>
</Layout>
